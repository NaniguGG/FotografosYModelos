@model IEnumerable<Shootr.Models.Propuesta>

@{
    ViewBag.Title = "Index";
}

<h2>Propuestas @Html.ActionLink("Crear nueva", "Create", null, new { @class = "btn btn-info" })</h2>


<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        @using (Html.BeginForm())
        {
           
                <dl class="dl-horizontal">
                    <dt>
                        Buscar:
                    </dt>
                    <dd>
                        @Html.TextBox("SearchString", null, new { @class = "form-control" }) <input type="submit" value="Search" class="btn btn-primary btn-success" />
                    </dd>
                </dl>
            
        }

    </div> 
</div>


<div class="row">





    @*@{int index = 0;}*@

    @foreach (var item in Model.Where(x => x.Activa == true))
    {

        @*if (index % 3 == 0)
            {
                @Html.Raw(@"<div class=""row"">")
            }*@

        <div class="col-md-4 col-sm-12 col-xs-12">
            <div class="panel panel-info">
                <div class="panel-heading">@item.Nombre</div>
                <div class="panel-body">
                    <img class="img-thumbnail img-center" src="@Url.Content("~/PropuestasPictures/" + item.URLFoto + ".jpg")" alt="Image" />
                </div>
                <div class="panel-footer">@Html.ActionLink("Ver Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-success" })</div>
            </div>
        </div>

        @*if (index % 3 == 2)
            {
                @Html.Raw(@"</div>")
                index++;
            }*@

    }
</div>
<div class="row"></div>

