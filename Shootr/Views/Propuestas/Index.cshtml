@model IEnumerable<Shootr.Models.Propuesta>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Creador.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripccion)
        </th>
        <th>
            Foto
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lugar)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        if (item.Activa == true)
        {
            <tr>
                <td>
                    @Html.ActionLink("" + @Html.DisplayFor(modelItem => item.Creador.UserName), "Details", "Usuario", new { username = item.Creador.UserName }, new { @class = "btn btn-success" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripccion)
                </td>
                <td>
                    <img class="img-responsive img-center" src="@Url.Content("~/PropuestasPictures/" + item.URLFoto + ".jpg")" alt="Image" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lugar)
                </td>
                <td>
                    @Html.ActionLink("Ver Detalles", "Details", new { id = item.Id }) |
                </td>
            </tr>

        }

    }

</table>
